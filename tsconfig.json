{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "outDir": "dist",
        "declaration": true,
        "sourceMap": false,
        "allowSyntheticDefaultImports": true,
        "downlevelIteration": true,
        "lib": [
            "es2017",
            "dom"
        ]
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts",
        "tests/**/*.js",
        "scripts/**/*.js"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "playcanvas"
    ]
}